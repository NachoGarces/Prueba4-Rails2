<h2 class='text-dark'>¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class='field text-dark'>
    <%= f.label :email %><br />
    <%= f.email_field :email, class:'form-control ds-input w-30', autofocus: true, autocomplete: "email" %>
  </div>

  <div class='btn btn-success'>
    <%= f.submit "Enviarme instrucciones para restablecer la contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
