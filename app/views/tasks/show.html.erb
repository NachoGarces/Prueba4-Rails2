<div class='row'>
  <div class='col-md-6'>
    <div class='card text-white border-primary'>
      <ul class='list-group list-group-flush'>
        <p class='card-text'><%= image_tag @task.photo, class:'card-img-top' %></p>
        <li class='list-group-item d-flex justify-content-between align-items-center'>
          <p class='card-text'><%= @task.title %></p>
          <p class='card-text'><%= @task.description %></p>
          <div class='btn-group' role='group' aria-label='Basic example'>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <div class='col-md-6'>
      <% @tasksusers.each do |tus| %>
        <div class='card text-white border-primary text-center'>
          <% @user.each do |us| %>
            <% if tus.completed? && tus.user_id == us.id %>
              <h4><%= image_tag us.avatar, class:'w-90' %> <%= us.name %> <%= us.lastname %> </h4>
            <% end %>
          <% end %>
        </div>
        <br>
      <% end %>
      <div class='w-100 mt-2'> </div>
  </div>
</div>
